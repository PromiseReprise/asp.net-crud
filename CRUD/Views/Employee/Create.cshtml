@model Darbuotojas
@{
    ViewData["Title"] = "Pridėti darbuotoja";
}

<form asp-controller="Employee" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Vardas" class="control-label">Vardas:</label>
        <input asp-for="Vardas" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pavarde" class="control-label">Pavardė:</label>
        <input asp-for="Pavarde" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GimimoData" class="control-label">Gimimo Data:</label>
        <input asp-for="GimimoData" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresas" class="control-label">Adresas:</label>
        <input asp-for="Adresas" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pareigos" class="control-label">Pareigos:</label>
        @foreach (var pareiga in ViewBag.VisosPareigos)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="Pareigos" value="@pareiga.Id" /> @pareiga.Pareigos
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Pridėti</button>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Gryžti</a>

</form>

